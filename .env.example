# ============================================
# CONFIGURATION DOCKER
# ============================================
# INSTRUCTIONS :
# 1. Copiez ce fichier : cp .env.example .env
# 2. Modifiez les valeurs dans .env avec vos vraies données

# Database Configuration
DB_USER=postgres
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE
DB_NAME=edtech

# Backend Configuration
# Générez un nouveau secret avec : openssl rand -hex 32
JWT_SECRET=CHANGEZ_CE_SECRET_JWT
PORT=3000

# Seeding (facultatif)
# Mettre à "true" pour exécuter le seeder automatiquement au démarrage du backend
# Recommandé : laisser à "false" et exécuter manuellement avec "docker exec -it edAcademy-backend npm run seed"
SEED_DB=false

# Frontend Configuration 
# En local : http://localhost:3000/api
# En production : https://api.votre-domaine.com/api
VITE_API_URL=http://localhost:3000/api
